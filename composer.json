{
  "name": "alazycoder101/wordpress-website",
  "description": "A basic project to run WordPress on Heroku",
  "homepage": "https://github.com/alazycoder101/wordpress-website",
  "keywords": [ "wordpress", "composer", "heroku", "wp" ],
  "license": "MIT",
  "authors": [
    {
      "name": "Lazy Coder",
      "email": "alazycoder101@gmail.com",
      "homepage": "https://alazycoder504866139.wordpress.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">7.0.0",
    "ext-gd": "*",
    "johnpbloch/wordpress": "*",
    "wp-cli/wp-cli-bundle": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "extra": {
    "installer-paths": {
      "app/mu-plugins/{$name}/": [
        "automattic/batcache",
        "wpackagist-plugin/redis-cache",
        "wpackagist-plugin/secure-db-connection"
      ],
      "app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "app/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "wordpress-install-dir": "wordpress"
    }
  },
  "scripts": {
    "post-install-cmd": [
    ]
  },
  "config": {
    "allow-plugins": {
      "johnpbloch/wordpress-core-installer": true
    }
  }
}
